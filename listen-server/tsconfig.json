{
  "compilerOptions": {
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "paths": {
      "@model/*": [
        "./src/app/core/model/*"
      ],
      "@controller/*": [
        "./src/app/core/controller/*"
      ],
      "@ormController/*": [
        "./src/app/orm-core/controller/*"
      ],
      "@orm/*": [
        "./src/app/orm-core/*"
      ],
      "@bll/*": [
        "./src/app/core/bll/*"
      ],
      "@dal/*": [
        "./src/app/core/dal/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@config/*": [
        "./src/app/configs/*"
      ],
      "@lib/*": [
        "./src/app/lib/*"
      ],
      "@lib": [
        "./src/app/lib/index"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "copyStatic.ts",
    "rm-dist.ts",
    "node_modules"
  ]
}